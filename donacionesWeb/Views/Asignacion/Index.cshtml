@model IEnumerable<donacionesWeb.Models.Asignacione>

@{
	ViewData["Title"] = "Asignaciones";
}

<h1>Asignaciones</h1>

<p>
	<a asp-action="Create" class="btn btn-primary">Nueva Asignación</a>
</p>

<table class="table">
	<thead>
	<tr>
		<th>ID</th>
		<th>Campaña ID</th>
		<th>Descripción</th>
		<th>Monto</th>
		<th>Fecha</th>
		<th>Acciones</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model)
	{
		<tr>
			<td>@Html.DisplayFor(modelItem => item.AsignacionId)</td>
			<td>@Html.DisplayFor(modelItem => item.CampaniaId)</td>
			<td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
			<td>@Html.DisplayFor(modelItem => item.Monto)</td>
			<td>@Html.DisplayFor(modelItem => item.FechaAsignacion)</td>
			<td>
				<a asp-action="Details" asp-route-id="@item.AsignacionId" class="btn btn-info">Detalles</a>
				<a asp-action="Delete" asp-route-id="@item.AsignacionId" class="btn btn-danger">Eliminar</a>
			</td>
		</tr>
	}
	</tbody>
</table>