@model donacionesWeb.Models.Asignacione

@{
	ViewData["Title"] = "Eliminar Asignación";
}

<h1>Eliminar Asignación</h1>

<h3>¿Está seguro que desea eliminar esta asignación?</h3>
<div>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">ID:</dt>
		<dd class="col-sm-10">@Model.AsignacionId</dd>
        
		<dt class="col-sm-2">Descripción:</dt>
		<dd class="col-sm-10">@Model.Descripcion</dd>
        
		<dt class="col-sm-2">Monto:</dt>
		<dd class="col-sm-10">@Model.Monto</dd>
	</dl>
    
	<form asp-action="Delete">
		<input type="hidden" asp-for="AsignacionId" />
		<button type="submit" class="btn btn-danger">Eliminar</button>
		<a asp-action="Index" class="btn btn-secondary">Cancelar</a>
	</form>
</div>