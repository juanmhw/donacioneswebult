<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - donacionesWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/donaciones-layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth-styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/feedback-styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mensajes-styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/donacionesWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/estadisticasEstilos.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bandejaEstilos.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="@(Context.Request.Path.StartsWithSegments("/Auth") ? "auth-page" : "")">
    @if (User.Identity != null && User.Identity.IsAuthenticated && !Context.Request.Path.StartsWithSegments("/Auth"))
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Dashboard">
                        <i class="fas fa-hand-holding-heart me-2"></i>donacionesWeb
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">




                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dashboard">
                                        <i class="fas fa-chart-pie"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Asignaciones" asp-action="Index">
                                        <i class="fas fa-hand-holding-usd"></i> Asignaciones
                                    </a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="feedbackDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-comment-dots"></i> Feedback
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="feedbackDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Feedback" asp-action="Index">
                                                <i class="fas fa-list"></i> Ver todos
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Feedback" asp-action="Estadisticas">
                                                <i class="fas fa-chart-bar"></i> Estadísticas
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="mensajesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-envelope"></i> Gestión Mensajes
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="mensajesDropdown">
                                       
                                        <li>
                                            <a class="dropdown-item" asp-controller="Mensajes" asp-action="Index">
                                                <i class="fas fa-envelope-open"></i> Mensajes
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Campanias" asp-action="Index">
                                        <i class="fas fa-hand-holding-usd"></i> campañas
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="RendicionGeneral" asp-action="Index">
                                        <i class="fas fa-hand-holding-usd"></i> caja
                                    </a>
                                </li>



                            }

                        </ul>

                        <!-- Añadir un bloque de código para depuración temporal -->
                        @if (false) // Cambiar a true para activar la depuración
                        {
                            <div class="text-center">
                                <h6>Roles del usuario:</h6>
                                <ul class="list-inline">
                                    @foreach (var claim in User.Claims.Where(c => c.Type == System.Security.Claims.ClaimTypes.Role))
                                    {
                                        <li class="list-inline-item badge bg-info">@claim.Value</li>
                                    }
                                </ul>
                            </div>
                        }

                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <span class="nav-link text-dark">
                                    <i class="fas fa-user-circle"></i> @User.Identity.Name
                                </span>
                            </li>
                            <li class="nav-item">
                                <form class="form-inline" asp-controller="Auth" asp-action="Logout" method="post">
                                    <button type="submit" class="nav-link btn btn-link text-dark">
                                        <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>