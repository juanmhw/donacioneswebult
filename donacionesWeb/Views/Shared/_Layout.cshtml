<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - donacionesWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth-styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/donacionesWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="@(Context.Request.Path.StartsWithSegments("/Auth") ? "auth-page" : "")">
    @if (User.Identity.IsAuthenticated && !Context.Request.Path.StartsWithSegments("/Auth"))
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">donacionesWeb</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
	                    <ul class="navbar-nav flex-grow-1">
		                    <li class="nav-item">
			                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
		                    </li>
		                    @if (User.IsInRole("Donante"))
		                    {
			                    <li class="nav-item">
				                    <a class="nav-link text-dark" asp-area="" asp-controller="RendicionCuentas" asp-action="Index">Rendición de Cuentas</a>
			                    </li>
		                    }
		                    <li class="nav-item">
			                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Index">Usuario</a>
		                    </li>
		                    <li class="nav-item">
			                    <a class="nav-link text-dark" asp-area="" asp-controller="Feedback" asp-action="Index">Feedback</a>
		                    </li>
		                    <li class="nav-item">
			                    <a class="nav-link text-dark" asp-area="" asp-controller="Campania" asp-action="Index">Campaña</a>
		                    </li>
		                    <li class="nav-item">
			                    <a class="nav-link text-dark" asp-area="" asp-controller="Donacion" asp-action="Index">Donacion</a>
		                    </li>
		                    <li class="nav-item">
			                    <a class="nav-link text-dark" asp-area="" asp-controller="SaldosDonacion" asp-action="Index">Saldos</a>
		                    </li>
		                    <li class="nav-item">
			                    <a class="nav-link text-dark" asp-area="" asp-controller="DonacionAsignacion" asp-action="Index">DonacionAsignacion</a>
		                    </li>
		                    <li class="nav-item">
			                    <a class="nav-link text-dark" asp-area="" asp-controller="RespuestaMensaje" asp-action="Index">RespuestaMensaje</a>
		                    </li>
		                    <li class="nav-item">
			                    <a class="nav-link text-dark" asp-area="" asp-controller="Asignacion" asp-action="Index">Asignacion</a>
		                    </li>
		                    <li class="nav-item">
			                    <a class="nav-link text-dark" asp-area="" asp-controller="DetallesAsignacion" asp-action="Index">DetallesAsignacion</a>
		                    </li>
		                    <li class="nav-item">
			                    <a class="nav-link text-dark" asp-area="" asp-controller="Mensaje" asp-action="Index">Mensaje</a>
		                    </li>
	                    </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <span class="nav-link text-dark">
                                    <i class="fas fa-user-circle"></i> @User.Identity.Name
                                </span>
                            </li>
                            <li class="nav-item">
                                <form class="form-inline" asp-controller="Auth" asp-action="Logout" method="post">
                                    <button type="submit" class="nav-link btn btn-link text-dark">
                                        <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (User.Identity.IsAuthenticated && !Context.Request.Path.StartsWithSegments("/Auth"))
    {
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - donacionesWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>