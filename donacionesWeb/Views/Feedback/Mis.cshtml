@model IEnumerable<donacionesWeb.Models.Feedback>

@{
    ViewData["Title"] = "Mis comentarios";
}

<div class="container py-4">
    <h1>Mis comentarios y opiniones</h1>

    <div class="mb-4">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo comentario
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No has enviado ningún comentario todavía.
            <a asp-action="Create" class="alert-link">¡Haz clic aquí para dejarnos tu opinión!</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model.OrderByDescending(f => f.FechaCreacion))
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span>@item.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</span>
                            <div>
                                @for (int i = 0; i < item.Calificacion; i++)
                                {
                                    <span class="text-warning">⭐</span>
                                }
                                <span class="ms-1">@item.Calificacion/5</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@item.Asunto</h5>
                            <p class="card-text">
                                @if (item.Texto.Length > 150)
                                {
                                    @(item.Texto.Substring(0, 150) + "...")
                                }
                                else
                                {
                                    @item.Texto
                                }
                            </p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Ver completo</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>