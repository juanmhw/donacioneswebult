@model donacionesWeb.Models.Feedback

@{
    ViewData["Title"] = "Detalles del comentario";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Comentarios</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Detalle</li>
                </ol>
            </nav>

            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="m-0">Detalle del comentario</h3>
                    <span class="badge bg-light text-dark">ID: @Model.Id</span>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Información del usuario</h5>
                            <p><strong>Nombre:</strong> @Model.Nombre</p>
                            <p><strong>Email:</strong> @Model.Email</p>
                            <p><strong>ID Usuario:</strong> @Model.UsuarioId</p>
                        </div>
                        <div class="col-md-6">
                            <h5>Información del comentario</h5>
                            <p><strong>Fecha:</strong> @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</p>
                            <p>
                                <strong>Calificación:</strong>
                                @for (int i = 0; i < Model.Calificacion; i++)
                                {
                                    <span class="text-warning">⭐</span>
                                }
                                @Model.Calificacion/5
                            </p>
                        </div>
                    </div>

                    <div class="mb-3">
                        <h5>Asunto</h5>
                        <p class="border-bottom pb-2">@Model.Asunto</p>
                    </div>

                    <div class="mb-3">
                        <h5>Mensaje</h5>
                        <div class="p-3 bg-light rounded">
                            @Model.Texto
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>