@model donacionesWeb.Models.Donacione

@{
    ViewData["Title"] = "Nueva Donación";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="UsuarioId" class="control-label"></label>
        <input asp-for="UsuarioId" class="form-control" />
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CampaniaId" class="control-label"></label>
        <input asp-for="CampaniaId" class="form-control" required />
        <span asp-validation-for="CampaniaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Monto" class="control-label"></label>
        <input asp-for="Monto" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TipoDonacion" class="control-label"></label>
        <select asp-for="TipoDonacion" class="form-control" required>
            <option value="Monetaria">Monetaria</option>
            <option value="Especie">Especie</option>
        </select>
        <span asp-validation-for="TipoDonacion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion" class="control-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input class="form-check-input" asp-for="EsAnonima" />
        <label class="form-check-label" asp-for="EsAnonima"></label>
    </div>

    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>