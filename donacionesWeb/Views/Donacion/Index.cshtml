@model IEnumerable<donacionesWeb.Models.Donacione>

@{
	ViewData["Title"] = "Donaciones";
}

<h2>@ViewData["Title"]</h2>

<p>
	<a asp-action="Create" class="btn btn-primary">Nueva Donación</a>
</p>

<table class="table">
	<thead>
	<tr>
		<th>ID</th>
		<th>Campaña</th>
		<th>Monto</th>
		<th>Tipo</th>
		<th>Fecha</th>
		<th>Acciones</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.DonacionId</td>
			<td>@item.CampaniaId</td>
			<td>@item.Monto.ToString("C")</td>
			<td>@item.TipoDonacion</td>
			<td>@item.FechaDonacion?.ToString("d")</td>
			<td>
				<a asp-action="Details" asp-route-id="@item.DonacionId" class="btn btn-info btn-sm">Detalles</a>
				<form asp-action="Delete" method="post" style="display:inline">
					<input type="hidden" name="id" value="@item.DonacionId" />
					<button type="submit" class="btn btn-danger btn-sm" 
					        onclick="return confirm('¿Eliminar esta donación?')">Eliminar</button>
				</form>
			</td>
		</tr>
	}
	</tbody>
</table>