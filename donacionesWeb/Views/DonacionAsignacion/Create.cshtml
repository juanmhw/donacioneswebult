@model donacionesWeb.Models.DonacionesAsignacione

@{
	ViewData["Title"] = "Nueva Asignación de Donación";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
	<div class="form-group">
		<label asp-for="DonacionId" class="control-label"></label>
		<input asp-for="DonacionId" class="form-control" required />
		<span asp-validation-for="DonacionId" class="text-danger"></span>
	</div>
    
	<div class="form-group">
		<label asp-for="AsignacionId" class="control-label"></label>
		<input asp-for="AsignacionId" class="form-control" required />
		<span asp-validation-for="AsignacionId" class="text-danger"></span>
	</div>
    
	<div class="form-group">
		<label asp-for="MontoAsignado" class="control-label"></label>
		<input asp-for="MontoAsignado" class="form-control" type="number" step="0.01" required />
		<span asp-validation-for="MontoAsignado" class="text-danger"></span>
	</div>
    
	<div class="form-group">
		<input type="submit" value="Crear" class="btn btn-primary" />
		<a asp-action="Index" class="btn btn-secondary">Cancelar</a>
	</div>
</form>