@model donacionesWeb.Models.DonacionesAsignacione

@{
    ViewData["Title"] = "Detalles de Asignación";
}

<h2>@ViewData["Title"]</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID Asignación</dt>
        <dd class="col-sm-10">@Model.DonacionAsignacionId</dd>

        <dt class="col-sm-2">Donación ID</dt>
        <dd class="col-sm-10">@Model.DonacionId</dd>

        <dt class="col-sm-2">Asignación ID</dt>
        <dd class="col-sm-10">@Model.AsignacionId</dd>

        <dt class="col-sm-2">Monto Asignado</dt>
        <dd class="col-sm-10">@Model.MontoAsignado.ToString("C")</dd>

        <dt class="col-sm-2">Fecha Asignación</dt>
        <dd class="col-sm-10">@Model.FechaAsignacion?.ToString("g")</dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>