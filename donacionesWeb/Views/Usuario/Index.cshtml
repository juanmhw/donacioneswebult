@model IEnumerable<donacionesWeb.Models.Usuario>

@{
	ViewData["Title"] = "Lista de Usuarios";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["ErrorMessage"] != null)
{
	<div class="alert alert-danger">
		@TempData["ErrorMessage"]
	</div>
}

<p>
	<a asp-action="Create" class="btn btn-success">Crear Nuevo</a>
</p>

<table class="table">
	<thead>
	<tr>
		<th>@Html.DisplayNameFor(model => model.UsuarioId)</th>
		<th>Nombre Completo</th>
		<th>@Html.DisplayNameFor(model => model.Email)</th>
		<th>@Html.DisplayNameFor(model => model.TipoUsuario)</th>
		<th>@Html.DisplayNameFor(model => model.Activo)</th>
		<th>Acciones</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model)
	{
		<tr>
			<td>@Html.DisplayFor(modelItem => item.UsuarioId)</td>
			<td>@item.Nombre @item.Apellido</td>
			<td>@Html.DisplayFor(modelItem => item.Email)</td>
			<td>@Html.DisplayFor(modelItem => item.TipoUsuario)</td>
			<td>@(item.Activo.HasValue && item.Activo.Value ? "Sí" : "No")</td>
			<td>
				<form asp-action="Delete" method="post">
					<input type="hidden" name="id" value="@item.UsuarioId" />
					<button type="submit" class="btn btn-danger btn-sm" 
					        onclick="return confirm('¿Está seguro de eliminar este usuario?')">
						Eliminar
					</button>
				</form>
			</td>
		</tr>
	}
	</tbody>
</table>