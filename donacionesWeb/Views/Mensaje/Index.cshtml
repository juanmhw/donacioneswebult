@model IEnumerable<donacionesWeb.Models.Mensaje>

@{
	ViewData["Title"] = "Mensajes";
}

<h2>Lista de Mensajes</h2>

<p>
	<a asp-action="Create" class="btn btn-primary">Nuevo Mensaje</a>
</p>

<table class="table">
	<thead>
	<tr>
		<th>ID</th>
		<th>Asunto</th>
		<th>Remitente</th>
		<th>Fecha</th>
		<th>Acciones</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.MensajeId</td>
			<td>@item.Asunto</td>
			<td>Usuario @item.UsuarioOrigen</td>
			<td>@item.FechaEnvio?.ToString("g")</td>
			<td>
				<a asp-action="Details" asp-route-id="@item.MensajeId" class="btn btn-info btn-sm">Ver</a>
				<form asp-action="Delete" method="post" style="display:inline">
					<input type="hidden" name="id" value="@item.MensajeId" />
					<button type="submit" class="btn btn-danger btn-sm" 
					        onclick="return confirm('¿Eliminar este mensaje?')">Eliminar</button>
				</form>
			</td>
		</tr>
	}
	</tbody>
</table>