@model donacionesWeb.Models.Mensaje

@{
	ViewData["Title"] = "Nuevo Mensaje";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
	<div class="form-group">
		<label asp-for="UsuarioOrigen" class="control-label"></label>
		<input asp-for="UsuarioOrigen" class="form-control" />
		<span asp-validation-for="UsuarioOrigen" class="text-danger"></span>
	</div>
    
	<div class="form-group">
		<label asp-for="UsuarioDestino" class="control-label"></label>
		<input asp-for="UsuarioDestino" class="form-control" />
		<span asp-validation-for="UsuarioDestino" class="text-danger"></span>
	</div>
    
	<div class="form-group">
		<label asp-for="Asunto" class="control-label"></label>
		<input asp-for="Asunto" class="form-control" />
		<span asp-validation-for="Asunto" class="text-danger"></span>
	</div>
    
	<div class="form-group">
		<label asp-for="Contenido" class="control-label"></label>
		<textarea asp-for="Contenido" class="form-control" rows="5"></textarea>
		<span asp-validation-for="Contenido" class="text-danger"></span>
	</div>
    
	<div class="form-group mt-3">
		<input type="submit" value="Enviar" class="btn btn-primary" />
		<a asp-action="Index" class="btn btn-secondary">Cancelar</a>
	</div>
</form>