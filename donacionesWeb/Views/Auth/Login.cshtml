@model donacionesWeb.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_AuthLayout"; // Usar el layout específico de autenticación
}

<div class="auth-container">
    <div class="auth-box">
        <div class="auth-header">
            <h2>@ViewData["Title"]</h2>
        </div>
        <div class="auth-body">
            <form asp-action="Login" method="post">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="Ingresa tu correo electrónico" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contrasena" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input asp-for="Contrasena" type="password" class="form-control" placeholder="Ingresa tu contraseña" />
                    </div>
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
                </div>
            </form>
            <div class="auth-footer">
                <p>¿No tienes una cuenta? <a asp-action="Register" class="register-link">Regístrate aquí</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('.auth-box').addClass('animate');
        });
    </script>
}